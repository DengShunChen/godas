#!/bin/bash
set -e

cat <<EOF
#================================================================================
#================================================================================
# JJOB_DA_LETKF
# Run UMD-LETKF, Recenter and Remapping
#================================================================================
#================================================================================
EOF

module purge
source $MOD_PATH/godas.main
module list

cd $RUNCDATE

cat <<EOF
#============================================
# Run UMD-LETKF
#============================================
EOF

srun -n $NPE ${SOCA_EXEC}/letkfdriver ./yaml/letkf.yml


